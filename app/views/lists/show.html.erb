<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <h1 id="name"><strong><%= @list.name %></strong></h1>
  <br>
  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <div id="list"><li class="list-group-item d-flex flex-row justify-content-between align-items-center"><%= bookmark.comment %>-----<%= bookmark.movie.title %><%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger ms-2"
  %></li></div>
    <% end %>
  </ul>
  <br>
  <%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class:"btn btn-primary" %>
  <br>
  <%= link_to "Return to lists", lists_path, class:"btn btn-primary" %>
</div>
